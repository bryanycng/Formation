<%-#layout for the 'pick players' area on the right side of the new team page-%>
<br>
<br>
<br>
<div class= "row">	
  <div class="tab-pane">
  <% player = 0 %>
  <% n = Player.count %>
  <% if n <= 3%>
    <% (0..2).each do |i| %>
      <div class="col-md-4">
        <br>
          <%= image_tag("blank_image.jpg", :alt => "rss feed" , :class => ["displayed" , "character-image-size"], :id => "player" + i.to_s) %>
          <%=  i%>
      </div>
    <% end %>
  <% end %>
  <% if n > 3%>
    <% (0..2).each do |i| %>
      <div class="col-md-4">
      <% (0..(n/3).floor).each do |j| %>
          <br>
          <%= image_tag("blank_image.jpg", :alt => "rss feed" , :class => ["displayed" , "character-image-size"], :id => "player" + (player + j).to_s) %>
          <%=  player+(j*3)%>
      <% end %>
      </div> 
      <% player += 1 %>
    <% end %>
  <% end %>
  </div>
</div>


<script>
i = 0
Player.all.forEach()(function(player))
$(this).find("player" + i).attr("src" , "<%= image_path "player.name"%>"); 
console.log(player.name)
i++
</script>

